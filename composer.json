{
    "name": "uma/slim-doctrine-demo",
    "type": "project",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "UMA\\DoctrineDemo\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "UMA\\Tests\\DoctrineDemo\\": "tests/"
        }
    },
    "require": {
        "php": "^8.0.0 || ^8.1.0",
        "ext-json": "*",
        "ext-sqlite3": "*",
        "doctrine/orm": "^2.12",
        "fakerphp/faker": "^1.19",
        "nyholm/psr7": "^1.5",
        "nyholm/psr7-server": "^1.0",
        "slim/slim": "^4.10",
        "symfony/cache": "^6.1",
        "uma/dic": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "roave/security-advisories": "dev-master"
    },
    "scripts": {
        "serve": [
            "@composer install",
            "php vendor/bin/doctrine orm:schema:update --force",
            "php -S localhost:8000 -t public public/index.php"
        ],
        "test": [
            "php vendor/bin/phpunit"
        ]
    },
    "config": {
        "process-timeout": 0,
        "sort-packages": true,
        "allow-plugins": {
            "composer/package-versions-deprecated": true
        }
    }
}
