{
    "name": "uma/slim-doctrine-demo",
    "type": "project",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "UMA\\DoctrineDemo\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "UMA\\Tests\\DoctrineDemo\\": "tests/"
        }
    },
    "require": {
        "php": "^8.1.0 || ^8.2.0",
        "ext-json": "*",
        "ext-sqlite3": "*",
        "doctrine/orm": "^2.13",
        "fakerphp/faker": "^1.20",
        "nyholm/psr7": "^1.5",
        "nyholm/psr7-server": "^1.0",
        "slim/slim": "^4.11",
        "symfony/cache": "^6.2",
        "uma/dic": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "roave/security-advisories": "dev-master"
    },
    "scripts": {
        "serve": [
            "@composer install",
            "./bin/doctrine orm:schema:update --force",
            "php -S localhost:8000 -t public public/index.php"
        ],
        "test": [
            "php vendor/bin/phpunit"
        ]
    },
    "config": {
        "process-timeout": 0,
        "sort-packages": true,
        "allow-plugins": {
            "composer/package-versions-deprecated": true
        }
    }
}
